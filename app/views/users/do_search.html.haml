.container
  %h1 Explore

  #profile-form
    = render "form"
  %br

  .row
    - @users.each do |user|
      .col-md-4
        = link_to user.first_name, user_path(user)
        %br
        = image_tag user.avatar.search
        %br
        = user.username
        \,
        = user.age
        \,
        = user.location
        %br

  = will_paginate @users

  - unless user_signed_in?
    .row
      .col-md-12
        %h3
          Why don't you...
          = link_to "Sign up", new_user_registration_path
          ?
