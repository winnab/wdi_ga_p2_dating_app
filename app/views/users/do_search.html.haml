.container
  %h1 Explore

  #profile-form
    = render "form"
  %br

  .row  
    - @users.each do |user|
      .col-md-4
        %h3.search.username
          = link_to user.username, user_path(user)
        .search
          = image_tag user.avatar.search
        .search.para
          Age:
          = user.age
        .search.para.location
          City:
          = user.location


  .row
    = will_paginate @users

  - unless user_signed_in?
    .row.sign-up-prompt
      %h3 
        Why don't you...
        = link_to "Sign up", new_user_registration_path
        ?
