.container
  %h1 Explore


  #profile-form
    = render "form"
  %br


  #div.row
    - if @users_search
      - @users_search.each do |user|
        .col-md-4
          %strong= link_to user.first_name, user_path(user)
          %br
          = image_tag user.avatar.search
          %br
          = user.username
          \,
          = user.age
          \,
          = user.location
          %br
    - else
      - @users.each do |user|
        .col-md-4
          %strong= link_to user.first_name, user_path(user)
          %br
          = image_tag user.avatar.search
          %br
          = user.username
          \,
          = user.age
          \,
          = user.location
          %br


  / = will_paginate @users
