.container

  #home_header
    %h4 Welcome to the greatest Dating Site in the history of mankind!

  #home_form
    = form_tag "/search" do

      .fieldset
        %b= label_tag "I am a:"
        = select_tag("gender", options_for_select([['Male'], ['Female']]))

        %p
        %b= label_tag "Looking for a:"
        = select_tag("looking_for_gender", options_for_select([['Female'], ['Male']]))

        %p
        = label_tag "age"
        = text_field_tag "start_age"
        = text_field_tag "end_age"

        %p
        = label_tag "location"
        = select_tag("location", options_for_select([ ["London"], ["Birmingham"], ["Leeds"], ["Glasgow"], ["Sheffield"], ["Liverpool"], ["Manchester"], ["Bristol"], ["Cardiff"], ["Coventry"], ["Nottingham"], ["Leicester"], ["Newcastle"], ["Brighton"], ["Oxford"], ["Cambridge"] ]) )



        %p
        = submit_tag "Continue", :class => "btn btn-primary"
