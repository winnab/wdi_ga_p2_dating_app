!!!
%html
  %head
    %title Dating!!
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container.col-md-12
      #alerts
        .alert.alert-success.notice{style:'display:none;'}= notice if notice.present?
        .alert.alert-danger{style:'display:none;'}= alert if alert.present?
      %nav
        - if user_signed_in?
          %p 
            Hey there,
            %b= current_user.email
          %ul
            %li= link_to 'Temp Dash Quicklink', dashboard_path
            %li= link_to 'Edit Profile', edit_user_registration_path
            %li= link_to 'Inbox', inbox_path
            %li= link_to 'Temp My Profile Quicklink', user_path(current_user)
            %li= link_to 'Sign Out',  destroy_user_session_path, method: :delete
            %li= link_to 'Search', search_path
        - else
          %ul
            %li= link_to 'Sign up', new_user_registration_path
            %li= link_to 'Sign In', new_user_session_path
            %li= link_to 'Search', search_path            
      = yield
